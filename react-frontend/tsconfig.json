{
  "compilerOptions": {
    "esModuleInterop": true, // import * as React from React
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/pages/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["utils/*"],
      "@typings/*": ["typings/*"]
    } // 절대경로를 짧게 만드는 설정
  }
}
